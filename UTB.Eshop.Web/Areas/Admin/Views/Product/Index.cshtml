@model IList<Product>

@{
    ViewData["Title"] = "Posts management";
}


<div class="text-center" style="color:blue; background-color:lightcyan; border-radius:10px; margin:10px">
    <h1 class="display-4" style="margin:5px">@ViewData["Title"]</h1>
    <h1 class="display-6" style="margin-bottom:5px">Click on "Create" to start making your post <a asp-action="Create">Create Post</a>.</h1>
</div>

@{
    if (Model != null && Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    
                    <th scope="col">Id</th>
                    <th scope="col">User name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Like</th>
                    <th scope="col">ImageSrc</th>
                    <th scope="col">Delete</th>

                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; ++i)
                {
                    <tr>
                        <th scope="row">@Model[i].Id</th>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Description</td>
                        <td>@Model[i].Price</td>
                        <td>@Model[i].ImageSrc</td>
                        <td><a asp-action="Delete" asp-route-Id="@Model[i].Id" onclick="return ConfirmDelete();">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>

    }
}

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}