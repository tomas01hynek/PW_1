@model IList<OrderItem>

@{
    ViewData["Title"] = "Post Administration";
}
<h1>@ViewData["Title"]</h1>

<a asp-action="Create">Create Post</a>
@{
    if (Model != null && Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@nameof(OrderItem.Id)</th>
                    <th scope="col">@nameof(OrderItem.ProductID)</th>
                    <th scope="col">@nameof(OrderItem.Product.Name)</th>
                    <th scope="col">@nameof(OrderItem.OrderID)</th>
                    <th scope="col">@nameof(OrderItem.Order.OrderNumber)</th>
                    <th scope="col">@nameof(OrderItem.Order.User.UserName)</th>
                    <th scope="col">@nameof(OrderItem.Amount)</th>
                    <th scope="col">@nameof(OrderItem.Price)</th>

                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; ++i)
                {
                    <tr>
                        <th scope="row">@Model[i].Id</th>
                        <td>@Model[i].Product.Id</td>
                        <td>@Model[i].Product.Name</td>
                        <td>@Model[i].Order.Id</td>
                        <td>@Model[i].Order.OrderNumber</td>
                        <td>@Model[i].Order.User.UserName</td>
                        <td>@Model[i].Amount</td>
                        <td>@Model[i].Price</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}

@section Scripts
{
    <script src="~/js/dialogs.js"></script>
}