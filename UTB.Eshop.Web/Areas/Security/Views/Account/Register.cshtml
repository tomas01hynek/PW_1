@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/login.css" />
}
<div id="logreg-forms">
    <form asp-action="Register" method="post" class="form-signup">

        <br />
        <div class="text-center" style="color:blue; background-color:lightcyan; border-radius:10px; margin:10px">
            <h1 class="h2 mb-3 font-weight-normal" style="text-align: center; margin:5px">Social Site</h1>
            <p style="margin-bottom:5px; text-align:center">Create account with 3rd party:</p>
        </div>
        <div class="social-login">
            <button style="background-color:blue" class="btn facebook-btn social-btn text-white" type="button"><span><i class="fab fa-facebook-f"></i> Login with Twitter <img src="~/img/src/twitter.jpg" style="height: 30px; width: 30px"/></span> </button>
        </div>
        <div class="social-login">
            <button class="btn google-btn social-btn" type="button"><span><i class="fab fa-google-plus-g"></i> Login with Reddit <img src="~/img/src/reddit.jpg" style="height: 30px; width: 30px"/></span> </button>
        </div>

        <br />
        <div class="text-center" style="color:blue; background-color:lightcyan; border-radius:10px; margin:10px">
            <p style="margin-bottom:5px; text-align:center">Or create our account:</p>
        </div>
        <hr>

        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="Username" type="text" id="user-name" class="form-control" placeholder="User name" autofocus="">
        <span asp-validation-for="Username" class="text-danger"></span>
        <input asp-for="FirstName" type="text" id="first-name" class="form-control" placeholder="First name" autofocus="">
        <span asp-validation-for="FirstName" class="text-danger"></span>
        <input asp-for="LastName" type="text" id="last-name" class="form-control" placeholder="Last name" autofocus="">
        <span asp-validation-for="LastName" class="text-danger"></span>
        <input asp-for="Email" type="email" id="user-email" class="form-control" placeholder="Email adress" autofocus="">
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Phone" type="tel" id="user-phone" class="form-control" placeholder="Phone number" autofocus="">
        <span asp-validation-for="Phone" class="text-danger"></span>
        <br />
        <input asp-for="Password" type="password" id="user-pass" class="form-control" placeholder="Password" autofocus="">
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="RepeatedPassword" type="password" id="user-repeatpass" class="form-control" placeholder="Type your password again" autofocus="">
        <span asp-validation-for="RepeatedPassword" class="text-danger"></span>
        <br />

        <div class="text-center">
            <button style="background-color:green" class="btn btn-primary btn-block" type="submit"><i class="fas fa-user-plus"></i> Sign in <img src="~/img/src/approved.jpg" style="height: 20px; width: 20px"/></button>
        </div>

        <br />
        <br />
        <hr>
        <a asp-action="Login" style="background-color:blueviolet" class="btn btn-success btn-block text-white" type="button" id="btn-signin"><i class="fas fa-sign-in-alt"></i> Login to existing account <img src="~/img/src/star.png" style="height: 20px; width: 20px"/></a>

    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}